<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_gravity="center" android:gravity="center"
    android:layout_width="match_parent" android:layout_margin="2dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="7dp"
        app:cardMaxElevation="5dp"
        app:cardElevation="4dp"
        android:layout_gravity="center">

        <RelativeLayout android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/imgOffer"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:src="@mipmap/ic_logo_super"
                android:scaleType="fitXY"/>

            <TextView android:gravity="center" android:background="@drawable/circlered"
                android:layout_alignParentLeft="true" android:layout_alignLeft="@+id/imgOffer"
                android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                android:layout_width="50dp" android:textColor="#fff" android:textStyle="bold"
                android:layout_height="50dp" android:text="50% Off"></TextView>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>