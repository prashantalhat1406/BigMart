<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <LinearLayout android:layout_weight="0.5"
        android:layout_width="match_parent" android:orientation="vertical"
        android:paddingEnd="10dp" android:paddingStart="10dp"
        android:layout_height="match_parent">
        <TextView android:layout_weight="0.5" android:layout_width="match_parent"
            android:layout_height="match_parent" android:text="Full Name :"
            android:textSize="@dimen/profileLabel" android:padding="10dp" android:layout_gravity="bottom" android:gravity="bottom"/>
        <LinearLayout android:layout_weight="0.5"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">

            <EditText android:id="@+id/edt_register_Name"
                android:layout_weight="0.03" android:visibility="visible" android:background="@drawable/profiletextbox"
                android:layout_width="match_parent" android:padding="10dp" android:maxLines="1" android:inputType="text"
                android:tag="Name" android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM "
                android:nextFocusDown="@id/edt_register_mobile" android:imeOptions="actionNone"

                android:layout_height="match_parent" android:hint="Name"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_weight="0.5"
        android:layout_width="match_parent" android:orientation="vertical"
        android:paddingEnd="10dp" android:paddingStart="10dp"
        android:layout_height="match_parent">
        <TextView android:layout_weight="0.5"        android:layout_width="match_parent"
            android:textSize="@dimen/profileLabel" android:padding="10dp" android:layout_gravity="bottom" android:gravity="bottom"
            android:layout_height="match_parent" android:text="Mobile :" />
        <LinearLayout android:layout_weight="0.5"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">

            <EditText android:id="@+id/edt_register_mobile"
                android:layout_weight="0.03" android:visibility="visible" android:background="@drawable/profiletextbox"
                android:layout_width="match_parent" android:padding="10dp" android:maxLines="1" android:inputType="number"
                android:maxLength="10"
                android:nextFocusDown="@id/edt_register_pin" android:imeOptions="actionNext"
                android:layout_height="match_parent" android:hint="Mobile"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_weight="0.5"
        android:layout_width="match_parent" android:orientation="vertical"
        android:paddingEnd="10dp" android:paddingStart="10dp"
        android:layout_height="match_parent">
        <TextView android:layout_weight="0.5"        android:layout_width="match_parent"
            android:textSize="@dimen/profileLabel" android:padding="10dp" android:layout_gravity="bottom" android:gravity="bottom"
            android:layout_height="match_parent" android:text="Pin :" />
        <LinearLayout android:layout_weight="0.5"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">

            <EditText android:id="@+id/edt_register_pin"
                android:layout_weight="0.03" android:visibility="visible" android:background="@drawable/profiletextbox"
                android:layout_width="match_parent" android:padding="10dp" android:maxLines="1" android:inputType="numberPassword"
                android:maxLength="4" android:drawableRight="@drawable/ic_eye_off"
                android:nextFocusDown="@id/edt_register_Address1" android:imeOptions="actionNext"
                android:layout_height="match_parent" android:hint="4 Digit Pin"/>
            <EditText
                android:layout_weight="0.03" android:visibility="invisible" android:background="@drawable/profiletextbox"
                android:layout_width="match_parent" android:padding="10dp" android:maxLines="1" android:inputType="numberPassword"
                android:maxLength="4" android:drawableRight="@drawable/ic_eye_off"
                android:nextFocusDown="@id/edt_register_Address1" android:imeOptions="actionNext"
                android:layout_height="match_parent" android:hint="4 Digit Pin"/>

        </LinearLayout>
        <!--<EditText android:id="@+id/edt_profile_address1"
            android:layout_weight="0.5" android:visibility="visible" android:background="@drawable/profiletextbox"
            android:layout_width="match_parent" android:padding="10dp" android:maxLines="1"
            android:layout_height="match_parent" android:hint="Address 1"/>-->
    </LinearLayout>

    <LinearLayout android:layout_weight="0.5"
        android:layout_width="match_parent" android:orientation="vertical"
        android:paddingEnd="10dp" android:paddingStart="10dp"
        android:layout_height="match_parent">
        <TextView android:layout_weight="0.5"        android:layout_width="match_parent"
            android:textSize="@dimen/profileLabel" android:padding="10dp" android:layout_gravity="bottom" android:gravity="bottom"
            android:layout_height="match_parent" android:text="Address 1 :" />
        <LinearLayout android:layout_weight="0.5"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">

            <EditText android:id="@+id/edt_register_Address1"
                android:layout_weight="0.03" android:visibility="visible" android:background="@drawable/profiletextbox"
                android:layout_width="match_parent" android:padding="10dp" android:maxLines="1" android:inputType="text"
                android:gravity="left|center" android:layout_gravity="center" android:tag="Address 1"
                android:nextFocusDown="@id/edt_register_Address2" android:imeOptions="actionNext"
                android:layout_height="match_parent" android:hint="Address 1"/>

        </LinearLayout>
        <!--<EditText android:id="@+id/edt_profile_address2"
            android:layout_weight="0.5" android:visibility="visible" android:background="@drawable/profiletextbox"
            android:layout_width="match_parent" android:padding="10dp" android:maxLines="1"
            android:layout_height="match_parent" android:hint="Address 2"/>-->
    </LinearLayout>

    <LinearLayout android:layout_weight="0.5"
        android:layout_width="match_parent" android:orientation="vertical"
        android:paddingEnd="10dp" android:paddingStart="10dp"
        android:layout_height="match_parent">
        <TextView android:layout_weight="0.5"        android:layout_width="match_parent"
            android:textSize="@dimen/profileLabel" android:padding="10dp" android:layout_gravity="bottom" android:gravity="bottom"
            android:layout_height="match_parent" android:text="Address 2 :" />
        <LinearLayout android:layout_weight="0.5"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">
            <EditText android:id="@+id/edt_register_Address2"
                android:layout_weight="0.03" android:visibility="visible" android:background="@drawable/profiletextbox"
                android:layout_width="match_parent" android:padding="10dp" android:maxLines="1" android:inputType="text"
                android:gravity="left|center" android:layout_gravity="center" android:tag="Address 2"
                android:nextFocusDown="@id/but_register_save" android:imeOptions="actionNext"
                android:layout_height="match_parent" android:hint="Address 2"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_weight="0.5" android:visibility="gone"
        android:layout_width="match_parent" android:orientation="vertical"
        android:paddingEnd="10dp"
        android:layout_height="match_parent">
        <TextView android:layout_weight="0.5"        android:layout_width="match_parent"
            android:textSize="@dimen/profileLabel" android:padding="10dp" android:layout_gravity="bottom" android:gravity="bottom"
            android:layout_height="match_parent" android:text="Security Question :" />
        <LinearLayout android:layout_weight="0.5"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">


            <Spinner android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></Spinner>
            <EditText android:layout_weight="0.4"
                android:background="@drawable/profiletextbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></EditText>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_weight="0.5"
        android:layout_width="match_parent" android:orientation="vertical" android:layout_gravity="center" android:gravity="center"
        android:layout_height="match_parent">
        <Button android:id="@+id/but_register_save"
            android:layout_width="260dp" android:background="@drawable/roundbutton" android:backgroundTint="@color/orangeColorButton"
            android:layout_gravity="center" android:gravity="center"
            android:layout_height="50dp" android:text="Register" android:textColor="#ffffff" ></Button>
    </LinearLayout>

    <LinearLayout android:layout_weight="0.5"
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="match_parent">

    </LinearLayout>

</LinearLayout>

