<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"  android:background="@drawable/button_greyborder"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >



    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:paddingStart="5dp" android:paddingEnd="5dp" android:paddingBottom="5dp" android:paddingTop="5dp"
        android:layout_height="match_parent">

        <LinearLayout android:layout_weight="0.1"
            android:paddingStart="0dp" android:paddingEnd="0dp" android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout android:layout_weight="0.1" android:id="@+id/layout_report_product_outofstock"
                android:layout_marginStart="5dp" android:layout_marginEnd="5dp"
                android:paddingStart="5dp" android:paddingEnd="5dp"
                android:layout_width="match_parent" android:orientation="vertical" android:background="@drawable/button_orangeborder"
                android:layout_height="match_parent" android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView  android:paddingBottom="2dp" android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textColor="@color/colorWhite"
                        android:textStyle="bold" android:background="@drawable/status_created"
                        android:layout_gravity="center_vertical" android:gravity="center_vertical|center"
                        android:text="Out Of Stock" android:textSize="@dimen/textButtonsSmall">

                    </TextView>
                </LinearLayout>


                <TextView  android:id="@+id/txt_report_reportwise_outofstock"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold" android:textColor="@color/blacklabels"
                    android:layout_gravity="center" android:gravity="top|center" android:text="0" android:textSize="@dimen/productName">

                </TextView>


            </LinearLayout>

            <LinearLayout android:layout_weight="0.1" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"
                android:paddingStart="5dp" android:paddingEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </LinearLayout>

            <LinearLayout android:layout_weight="0.1" android:id="@+id/layout_report_product_total"
                android:layout_marginStart="5dp" android:layout_marginEnd="5dp"
                android:layout_width="match_parent" android:orientation="vertical" android:background="@drawable/button_blackborder"
                android:layout_height="match_parent" android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView  android:paddingBottom="1dp" android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textColor="@color/colorWhite"
                        android:textStyle="bold" android:background="@drawable/status_total"
                        android:layout_gravity="center" android:gravity="center" android:text="Total Products"
                        android:textSize="@dimen/textButtonsSmall">

                    </TextView>
                </LinearLayout>

                <TextView android:id="@+id/txt_report_reportwise_total"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold" android:textColor="@color/blacklabels"
                    android:layout_gravity="center" android:gravity="top|center" android:text="0" android:textSize="@dimen/productName">

                </TextView>


            </LinearLayout>



        </LinearLayout>

        <LinearLayout android:layout_weight="0.1"  android:paddingEnd="0dp" android:paddingTop="5dp" android:paddingBottom="5dp"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginStart="5dp" android:layout_marginEnd="5dp"
                android:paddingStart="5dp" android:paddingEnd="5dp"
                android:layout_weight="0.1" android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/layout_report_product_category1"
                android:orientation="vertical"
                android:background="@drawable/button_blueborder"
                 android:foreground="?attr/selectableItemBackground">

                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView  android:id="@+id/txt_report_product_category1"
                        android:paddingBottom="2dp" android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textColor="@color/colorWhite"
                        android:textStyle="bold" android:background="@drawable/status_inprogress"
                        android:layout_gravity="center_vertical" android:gravity="center_vertical|center"
                        android:text="Dairy" android:textSize="@dimen/cartItems">

                    </TextView>
                </LinearLayout>
                <TextView  android:id="@+id/txt_report_product_category1_no"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold" android:textColor="@color/blacklabels"
                    android:layout_gravity="center" android:gravity="top|center" android:text="0" android:textSize="@dimen/productName">

                </TextView>


            </LinearLayout>

            <LinearLayout android:layout_marginStart="5dp" android:layout_marginEnd="5dp"
                android:layout_weight="0.1" android:layout_width="match_parent" android:layout_height="match_parent"

                android:id="@+id/layout_report_product_category2"
                 android:orientation="vertical"
                android:background="@drawable/button_greenborder" android:paddingEnd="5dp" android:paddingStart="5dp"
                 android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView  android:id="@+id/txt_report_product_category2"
                        android:paddingBottom="2dp" android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textColor="@color/colorWhite"
                        android:textStyle="bold" android:background="@drawable/status_complete"
                        android:layout_gravity="center" android:gravity="center"
                        android:text="Grocery" android:textSize="@dimen/cartItems">

                    </TextView>
                </LinearLayout>


                <TextView  android:id="@+id/txt_report_product_category2_no"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold" android:textColor="@color/blacklabels"
                    android:layout_gravity="center" android:gravity="top|center" android:text="0" android:textSize="@dimen/productName">

                </TextView>


            </LinearLayout>

            <LinearLayout android:layout_marginStart="5dp" android:layout_marginEnd="5dp" android:layout_weight="0.1" android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/layout_report_product_category3"
                 android:orientation="vertical"
                android:background="@drawable/button_redborder"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView  android:id="@+id/txt_report_product_category3"
                        android:paddingBottom="2dp" android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textColor="@color/colorWhite"
                        android:textStyle="bold" android:background="@drawable/status_cancelled"
                        android:layout_gravity="center_vertical" android:gravity="center_vertical|center"
                        android:text="Home&amp;Kitchen" android:textSize="@dimen/cartItems">

                    </TextView>
                </LinearLayout>
                <TextView  android:id="@+id/txt_report_product_category3_no"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold" android:textColor="@color/blacklabels"
                    android:layout_gravity="center" android:gravity="top|center" android:text="0" android:textSize="@dimen/productName">

                </TextView>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout android:layout_weight="0.1"
            android:paddingBottom="5dp" android:paddingTop="5dp" android:paddingEnd="0dp"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout android:layout_marginStart="5dp" android:layout_marginEnd="5dp" android:layout_weight="0.1" android:id="@+id/layout_report_product_category4"
                android:layout_width="match_parent" android:orientation="vertical" android:paddingEnd="5dp"
                android:background="@drawable/button_blueborder"
                android:layout_height="match_parent" android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView  android:id="@+id/txt_report_product_category4"
                        android:paddingBottom="2dp" android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textColor="@color/colorWhite"
                        android:textStyle="bold" android:background="@drawable/status_inprogress"
                        android:layout_gravity="center_vertical" android:gravity="center_vertical|center"
                        android:text="Skin Care" android:textSize="@dimen/cartItems">

                    </TextView>
                </LinearLayout>


                <TextView  android:id="@+id/txt_report_product_category4_no"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold" android:textColor="@color/blacklabels"
                    android:layout_gravity="center" android:gravity="top|center" android:text="0" android:textSize="@dimen/productName">

                </TextView>


            </LinearLayout>

            <LinearLayout android:layout_marginStart="5dp" android:layout_marginEnd="5dp" android:layout_weight="0.1" android:id="@+id/layout_report_product_category5"
                android:layout_width="match_parent" android:orientation="vertical"
                android:background="@drawable/button_greenborder" android:paddingEnd="5dp" android:paddingStart="5dp"
                android:layout_height="match_parent" android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView  android:id="@+id/txt_report_product_category5"
                        android:paddingBottom="2dp" android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textColor="@color/colorWhite"
                        android:textStyle="bold" android:background="@drawable/status_complete"
                        android:layout_gravity="center_vertical" android:gravity="center_vertical|center"
                        android:text="Personal Care" android:textSize="@dimen/cartItems">

                    </TextView>
                </LinearLayout>


                <TextView  android:id="@+id/txt_report_product_category5_no"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold" android:textColor="@color/blacklabels"
                    android:layout_gravity="center" android:gravity="top|center" android:text="0" android:textSize="@dimen/productName">

                </TextView>


            </LinearLayout>

            <LinearLayout android:layout_marginStart="5dp" android:layout_marginEnd="5dp" android:layout_weight="0.1" android:id="@+id/layout_report_product_category6"
                android:layout_width="match_parent" android:orientation="vertical"
                android:background="@drawable/button_redborder"
                android:layout_height="match_parent" android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView  android:id="@+id/txt_report_product_category6"
                        android:paddingBottom="2dp" android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textColor="@color/colorWhite"
                        android:textStyle="bold" android:background="@drawable/status_cancelled"
                        android:layout_gravity="center_vertical" android:gravity="center_vertical|center"
                        android:text="Pack Foods" android:textSize="@dimen/cartItems">

                    </TextView>
                </LinearLayout>


                <TextView  android:id="@+id/txt_report_product_category6_no"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold" android:textColor="@color/blacklabels"
                    android:layout_gravity="center" android:gravity="top|center" android:text="0" android:textSize="@dimen/productName">

                </TextView>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>

