<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/orderhistory"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="1dp" android:paddingRight="1dp"
    android:layout_height="75dp">

    <LinearLayout android:layout_weight="0.65" android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.22" android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView android:id="@+id/txt_orderN_date" android:layout_gravity="center" android:gravity="center|center_horizontal"
                android:layout_width="match_parent" android:layout_weight="0.6"
                android:text="24-May-2020" android:textColor="@color/blacklabels"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.2"
            android:layout_height="match_parent">
            <TextView android:id="@+id/txt_orderN_ID" android:layout_gravity="center" android:gravity="center"
                android:layout_width="match_parent" android:layout_weight="0.6" android:text="ABCDE"
                android:textStyle="italic|bold"
                android:textColor="@color/blacklabels"
                android:layout_height="match_parent"></TextView>
            <TextView android:id="@+id/txt_orderN_ID_DUP"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:visibility="gone"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.26" android:layout_gravity="center_horizontal" android:gravity="center"
            android:layout_height="match_parent" >
            <TextView android:id="@+id/txt_orderN_type" android:layout_gravity="center"
                android:gravity="center|center_horizontal"
                android:layout_width="wrap_content"
                android:text="H" android:textSize="@dimen/ordersumary1row" android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.2" android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView android:id="@+id/txt_orderN_totalamount" android:layout_gravity="center" android:gravity="center|center_horizontal"
                android:layout_width="match_parent" android:layout_weight="0.6" android:text="125.00" android:textSize="@dimen/ordersumary1row"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.22" android:layout_gravity="center_horizontal" android:gravity="center"
            android:layout_height="match_parent">
            <TextView android:id="@+id/txt_orderN_status" android:layout_gravity="center" android:gravity="right"
                android:layout_width="wrap_content" android:text="Created"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

