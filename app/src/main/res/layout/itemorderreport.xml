<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/orderhistory"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="1dp" android:paddingRight="1dp" android:foreground="?attr/selectableItemBackground"
    android:layout_height="75dp">

    <LinearLayout android:layout_weight="0.65" android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.22" android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView android:id="@+id/txt_reportorder_date" android:layout_gravity="center" android:gravity="center|center_horizontal"
                android:layout_width="match_parent" android:layout_weight="0.6" android:textSize="@dimen/textButtonsSmall"
                android:text="24-May-2020" android:textColor="@color/blacklabels"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.2"
            android:layout_height="match_parent">
            <TextView android:id="@+id/txt_reportorder_ID" android:layout_gravity="center" android:gravity="center"
                android:layout_width="match_parent" android:layout_weight="0.58" android:text="ABCDE"
                android:textStyle="italic|bold" android:paddingEnd="2dp"
                android:textColor="@color/blacklabels" android:textSize="@dimen/textButtonsSmall"
                android:layout_height="match_parent"></TextView>
            <TextView android:id="@+id/txt_reportorder_ID_DUP"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:visibility="gone"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.26" android:layout_gravity="center" android:gravity="center"
            android:layout_height="match_parent" >
            <TextView android:id="@+id/txt_reportorder_type" android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="22dp"
                android:text="H" android:textSize="10dp" android:textColor="@color/colorWhite"
                android:layout_height="22dp"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.2" android:orientation="vertical" android:paddingEnd="5dp"
            android:layout_height="match_parent">
            <TextView android:id="@+id/txt_reportorder_totalamount" android:layout_gravity="center" android:gravity="center|center_horizontal|right"
                android:layout_width="match_parent" android:layout_weight="0.6" android:textStyle="bold"
                android:text="125.00" android:textSize="@dimen/textButtons"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

