<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView android:id="@+id/txt_order_no" android:layout_gravity="center" android:gravity="center"
        android:layout_width="match_parent" android:layout_weight="0.9" android:text="1"
        android:layout_height="match_parent"></TextView>
    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="@android:color/darker_gray"/>
    <TextView android:id="@+id/txt_order_ID" android:layout_gravity="center" android:gravity="center"
        android:layout_width="match_parent" android:layout_weight="0.6" android:text="ABCDE"
        android:layout_height="match_parent"></TextView>
    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="@android:color/darker_gray"/>
    <TextView android:id="@+id/txt_order_Amount" android:layout_gravity="center" android:gravity="center"
        android:layout_width="match_parent" android:layout_weight="0.8" android:text="10000"
        android:layout_height="match_parent"></TextView>
    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="@android:color/darker_gray"/>
    <TextView android:id="@+id/txt_order_Status" android:layout_gravity="center" android:gravity="center"
        android:layout_width="match_parent" android:layout_weight="0.8" android:text="InProgress"
        android:layout_height="match_parent"></TextView>
    <TextView android:id="@+id/txt_order_ID_DUP"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:visibility="gone"></TextView>

</LinearLayout>