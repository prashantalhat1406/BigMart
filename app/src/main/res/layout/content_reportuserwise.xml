<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"  android:background="@drawable/button_greyborder"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <LinearLayout android:layout_weight="0.15"
        android:layout_width="match_parent" android:orientation="vertical"
        android:paddingStart="5dp" android:paddingEnd="5dp" android:paddingBottom="5dp" android:paddingTop="5dp"
        android:layout_height="match_parent">

        <LinearLayout android:layout_weight="0.1"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">



        </LinearLayout>

        <LinearLayout android:layout_weight="0.1"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </LinearLayout>

            <LinearLayout android:layout_weight="0.1"
                android:layout_width="match_parent" android:orientation="vertical" android:background="@drawable/button_blueborder"
                android:layout_height="match_parent"  android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView  android:paddingBottom="10dp" android:paddingTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:textColor="@color/colorWhite"
                        android:textStyle="bold" android:background="@drawable/status_inprogress"
                        android:layout_gravity="center" android:gravity="center" android:text="Total Users"
                        android:textSize="@dimen/textButtons">

                    </TextView>
                </LinearLayout>

                <TextView android:id="@+id/txt_report_userwise_total"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold" android:textColor="@color/blacklabels"
                    android:layout_gravity="center" android:gravity="top|center" android:text="0" android:textSize="@dimen/productName">

                </TextView>
            </LinearLayout>

            <LinearLayout android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_weight="0.1"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">
        </LinearLayout>

    </LinearLayout>



</LinearLayout>

