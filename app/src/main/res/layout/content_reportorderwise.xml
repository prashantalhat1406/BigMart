<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"  android:background="@drawable/button_greyborder"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <LinearLayout android:layout_weight="0.85"
        android:layout_width="match_parent" android:paddingTop="5dp" android:paddingBottom="5dp"
        android:layout_height="match_parent">
        <LinearLayout android:layout_weight="0.1"
            android:layout_width="match_parent" android:paddingStart="5dp" android:paddingEnd="5dp"
            android:layout_height="match_parent" >
            <TextView android:id="@+id/txt_report_orderwise_daily"
                android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_bluefull" android:textStyle="bold" android:textColor="#ffffff"
                android:layout_gravity="center" android:gravity="center" android:text="Daily" android:textSize="@dimen/productName">

            </TextView>
        </LinearLayout>
        <LinearLayout android:layout_weight="0.1"
            android:layout_width="match_parent" android:paddingEnd="5dp"
            android:layout_height="match_parent" >
            <TextView android:id="@+id/txt_report_orderwise_weekly"
                android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_blueborder" android:textStyle="bold"
                android:layout_gravity="center" android:gravity="center" android:text="Weekly" android:textSize="@dimen/productName">

            </TextView>
        </LinearLayout>
        <LinearLayout android:layout_weight="0.1"
            android:layout_width="match_parent" android:paddingEnd="5dp"
            android:layout_height="match_parent" >
            <TextView android:id="@+id/txt_report_orderwise_monthly"
                android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_blueborder" android:textStyle="bold"
                android:layout_gravity="center" android:gravity="center" android:text="Monthly" android:textSize="@dimen/productName">

            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_weight="0.85" android:paddingStart="5dp" android:paddingEnd="5dp"
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="match_parent">
        <Button android:id="@+id/but_reportorderwise_back"
            android:layout_weight="0.6" android:background="@drawable/button_blueborder"
            android:layout_width="match_parent" android:layout_gravity="center"
            android:layout_height="40dp" android:text="Back">

        </Button>
        <LinearLayout android:layout_weight="0.4"
            android:layout_width="match_parent" android:paddingEnd="5dp" android:paddingStart="5dp"
            android:layout_height="match_parent">
            <TextView android:id="@+id/txt_report_currentselection"

                android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                android:textSize="@dimen/profileLabel" android:background="@drawable/button_greenborder"
                android:layout_height="match_parent" android:text="22-27 June">

            </TextView>
        </LinearLayout>

        <Button android:id="@+id/but_reportorderwise_next"
            android:layout_weight="0.6" android:background="@drawable/button_blueborder"
            android:layout_width="match_parent" android:layout_gravity="center"
            android:layout_height="40dp" android:text="Next">

        </Button>


    </LinearLayout>

    <LinearLayout android:layout_weight="0.15"
        android:layout_width="match_parent" android:orientation="vertical"
        android:paddingStart="5dp" android:paddingEnd="5dp" android:paddingBottom="5dp" android:paddingTop="5dp"
        android:layout_height="match_parent">

        <LinearLayout android:layout_weight="0.1"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout android:layout_weight="0.1" android:id="@+id/layout_report_created"
                android:layout_width="match_parent" android:orientation="vertical" android:background="@drawable/button_orangeborder"
                android:layout_height="match_parent" >
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView  android:paddingBottom="10dp" android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textColor="@color/colorWhite"
                        android:textStyle="bold" android:background="@drawable/status_created"
                        android:layout_gravity="center_vertical" android:gravity="center_vertical|center"
                        android:text="Created" android:textSize="@dimen/textButtons">

                    </TextView>
                </LinearLayout>


                <TextView  android:id="@+id/txt_report_orderwise_created"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     android:textStyle="bold" android:textColor="@color/blacklabels"
                    android:layout_gravity="center" android:gravity="top|center" android:text="0" android:textSize="@dimen/productName">

                </TextView>


            </LinearLayout>

            <LinearLayout android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </LinearLayout>

            <LinearLayout android:layout_weight="0.1" android:id="@+id/layout_report_inprogress"
                android:layout_width="match_parent" android:orientation="vertical" android:background="@drawable/button_blueborder"
                android:layout_height="match_parent" >


                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView  android:paddingBottom="10dp" android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textColor="@color/colorWhite"
                        android:textStyle="bold" android:background="@drawable/status_inprogress"
                        android:layout_gravity="center_vertical" android:gravity="center_vertical|center"
                        android:text="InProgress" android:textSize="@dimen/textButtons">

                    </TextView>
                </LinearLayout>

                <TextView android:id="@+id/txt_report_orderwise_inprogress"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold" android:textColor="@color/blacklabels"
                    android:layout_gravity="center" android:gravity="top|center" android:text="0" android:textSize="@dimen/productName">

                </TextView>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_weight="0.1"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </LinearLayout>

            <LinearLayout android:layout_weight="0.1" android:id="@+id/layout_report_total"
                android:layout_width="match_parent" android:orientation="vertical" android:background="@drawable/button_blackborder"
                android:layout_height="match_parent" >
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView  android:paddingBottom="10dp" android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textColor="@color/colorWhite"
                        android:textStyle="bold" android:background="@drawable/status_total"
                        android:layout_gravity="center" android:gravity="center" android:text="  Total  "
                        android:textSize="@dimen/textButtons">

                    </TextView>
                </LinearLayout>

                <TextView android:id="@+id/txt_report_orderwise_total"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:layout_gravity="center" android:gravity="top|center" android:text="0" android:textSize="@dimen/productName">

                </TextView>


            </LinearLayout>

            <LinearLayout android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_weight="0.1"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout android:layout_weight="0.1" android:id="@+id/layout_report_completed"
                android:layout_width="match_parent" android:orientation="vertical" android:background="@drawable/button_greenborder"
                android:layout_height="match_parent" >
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView  android:paddingBottom="10dp" android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textColor="@color/colorWhite"
                        android:textStyle="bold" android:background="@drawable/status_complete"
                        android:layout_gravity="center_vertical" android:gravity="center_vertical|center"
                        android:text="Completed" android:textSize="@dimen/textButtons">

                    </TextView>
                </LinearLayout>

                <TextView android:id="@+id/txt_report_orderwise_completed"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold" android:textColor="@color/blacklabels"
                    android:layout_gravity="center" android:gravity="top|center" android:text="375" android:textSize="@dimen/productName">

                </TextView>


            </LinearLayout>

            <LinearLayout android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </LinearLayout>

            <LinearLayout android:layout_weight="0.1" android:id="@+id/layout_report_cancelled"
                android:layout_width="match_parent" android:orientation="vertical" android:background="@drawable/button_redborder"
                android:layout_height="match_parent" >
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView  android:paddingBottom="10dp" android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textColor="@color/colorWhite"
                        android:textStyle="bold" android:background="@drawable/status_cancelled"
                        android:layout_gravity="center_vertical" android:gravity="center_vertical|center"
                        android:text="Cancelled" android:textSize="@dimen/textButtons">

                    </TextView>
                </LinearLayout>

                <TextView android:id="@+id/txt_report_orderwise_cancelled"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold" android:textColor="@color/blacklabels"
                    android:layout_gravity="center" android:gravity="top|center" android:text="0" android:textSize="@dimen/productName">

                </TextView>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>

