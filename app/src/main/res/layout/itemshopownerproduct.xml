<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView android:id="@+id/txt_shopowner_no" android:layout_gravity="center" android:gravity="center"
        android:layout_width="match_parent" android:layout_weight="0.9" android:text="1" android:textColor="@color/blacklabels"
        android:layout_height="match_parent"></TextView>
    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="@android:color/darker_gray"/>
    <TextView android:id="@+id/txt_shopowner_productname" android:layout_gravity="center" android:gravity="center"
        android:layout_width="match_parent" android:layout_weight="0.6" android:text="Amul" android:textColor="@color/blacklabels"
        android:layout_height="match_parent"></TextView>
    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="@android:color/darker_gray"/>
    <TextView android:id="@+id/txt_shopowner_productMRP" android:layout_gravity="center" android:gravity="center"
        android:layout_width="match_parent" android:layout_weight="0.8" android:text="100" android:textColor="@color/blacklabels"
        android:layout_height="match_parent"></TextView>
    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="@android:color/darker_gray"/>
    <TextView android:id="@+id/txt_shopowner_productStock" android:layout_gravity="center" android:gravity="center"
        android:layout_width="match_parent" android:layout_weight="0.8" android:text="100" android:textColor="@color/blacklabels"
        android:layout_height="match_parent"></TextView>
    <TextView android:id="@+id/txt_shopowner_productID"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:visibility="gone"></TextView>

</LinearLayout>