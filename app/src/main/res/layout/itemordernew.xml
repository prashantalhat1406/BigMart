<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/orderhistory"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp">

    <LinearLayout android:layout_weight="0.65" android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.4"
            android:layout_height="match_parent">
            <TextView  android:layout_gravity="center" android:gravity="center" android:textSize="@dimen/ordersumarytoprow" android:textColor="@color/blacklabels"
                android:layout_width="match_parent" android:layout_weight="0.4" android:text="ORDER ID : "
                android:layout_height="match_parent"></TextView>
            <TextView android:id="@+id/txt_order_ID" android:layout_gravity="center" android:gravity="center"
                android:layout_width="match_parent" android:layout_weight="0.6" android:text="ABCDE" android:textStyle="bold"
                android:layout_height="match_parent"></TextView>
            <TextView android:id="@+id/txt_order_ID_DUP"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:visibility="gone"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.6" android:layout_gravity="center_horizontal" android:gravity="center"
            android:layout_height="match_parent">
            <TextView android:id="@+id/txt_order_status" android:layout_gravity="center" android:gravity="right"
                android:layout_width="wrap_content" android:text="Created"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_weight="0.35"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.2" android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView  android:layout_gravity="center" android:gravity="center" android:textSize="@dimen/ordersumary1row" android:textColor="@color/blacklabels"
                android:layout_width="match_parent" android:layout_weight="0.6" android:text="ORDER TOTAL"
                android:layout_height="match_parent"></TextView>
            <TextView android:id="@+id/txt_order_totalamount" android:layout_gravity="center" android:gravity="center|top"
                android:layout_width="match_parent" android:layout_weight="0.6" android:text="125.00" android:textSize="@dimen/ordersumary1row"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>
        <View android:layout_width="1dp" android:padding="15dp" android:layout_height="100dp" android:background="@color/blacklabels"/>
        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.2" android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView  android:layout_gravity="center" android:gravity="center" android:textSize="@dimen/ordersumary1row"
                android:layout_width="match_parent" android:layout_weight="0.6" android:text="DELIVERY TYPE" android:textColor="@color/blacklabels"
                android:layout_height="match_parent"></TextView>
            <TextView android:id="@+id/txt_order_deliverytype" android:layout_gravity="center" android:gravity="center|top"
                android:layout_width="match_parent" android:layout_weight="0.6" android:text="Home Delivery"
                android:layout_height="match_parent"></TextView>

        </LinearLayout>
        <View android:layout_width="1dp" android:padding="15dp" android:layout_height="100dp" android:background="@color/blacklabels"/>
        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.2" android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView  android:layout_gravity="center" android:gravity="center" android:textSize="@dimen/ordersumary1row"
                android:layout_width="match_parent" android:layout_weight="0.6" android:text="ORDER DATE" android:textColor="@color/blacklabels"
                android:layout_height="match_parent"></TextView>
            <TextView android:id="@+id/txt_order_date" android:layout_gravity="center" android:gravity="center|top"
                android:layout_width="match_parent" android:layout_weight="0.6" android:text="24-May-2020"
                android:layout_height="match_parent"></TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

